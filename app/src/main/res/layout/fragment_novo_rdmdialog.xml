<!-- Layout usado pelo DialogFragment onde é criado um novo RDM.
    O layout raiz é um LinearLayout e seus filhos são os campos
    que precisam ser informados para criar um novo RDM.-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.desblocadosuepb.uepbstudentmap.fragments.NovoRDMDialogFragment">

    <!-- Campo do Nome -->
    <EditText
        android:id="@+id/new_rdm_name"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="@string/edit_text_hint"

        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginBottom="5dp"
        />

    <!-- Spinner com a lista de Cursos -->
    <Spinner
        android:id="@+id/new_rdm_spinner"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:entries="@array/cursos"

        android:layout_marginBottom="5dp"
        />

</LinearLayout>
