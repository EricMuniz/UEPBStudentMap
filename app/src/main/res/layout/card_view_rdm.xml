<?xml version="1.0" encoding="utf-8"?>
<!-- Este é o CardView que representa um item da lista de RDM's.
    Ele é usado na classe RdmAdapter.
    O CardView é a view raiz e seu filho é um LinearLayout.
    Os filhos do LinearLayout são os campos com os dados do RDM. -->
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_margin="5dp"

    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Campo do Nome -->
        <TextView
            android:id="@+id/card_view_rdm_nome"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="10dp"

            android:textSize="18sp"
            android:textColor="#fff"
            android:background="@color/colorPrimary"
            />

        <!-- Campo do Curso -->
        <TextView
            android:id="@+id/card_view_rdm_curso"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="10dp"

            android:textSize="18sp"
            android:textColor="#000"
            android:background="#fff"
            />

        <!-- Campo da Quantidade de Aulas -->
        <TextView
            android:id="@+id/card_view_rdm_quant_aulas"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="10dp"

            android:textSize="18sp"
            android:textColor="#000"
            android:background="#fff"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>
