<!-- Layout que representa a aba esquerda do Fragmento
 do Mapa.-->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.desblocadosuepb.uepbstudentmap.fragments.MapaTab1Fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatImageButton

            android:id="@+id/sala01"

            android:layout_width="80dp"
            android:layout_height="110dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"

            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"

            android:background="@color/colorAccent"
            />

        <android.support.v7.widget.AppCompatImageButton

            android:id="@+id/sala02"

            android:layout_width="80dp"
            android:layout_height="110dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/sala01"

            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"

            android:background="@color/colorAccent"
            />

        <android.support.v7.widget.AppCompatImageButton

            android:id="@+id/sala03"

            android:layout_width="80dp"
            android:layout_height="110dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/sala02"

            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"

            android:background="@color/colorAccent"
            />

        <android.support.v7.widget.AppCompatImageButton

            android:id="@+id/saladce"

            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/sala03"

            android:layout_marginStart="90dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"

            android:background="@color/colorAccent"
            />

        <android.support.v7.widget.AppCompatImageButton

            android:id="@+id/sala101"

            android:layout_width="80dp"
            android:layout_height="110dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"

            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_vertical_margin"

            android:background="@color/colorAccent"
            />

        <android.support.v7.widget.AppCompatImageButton

            android:id="@+id/sala102"

            android:layout_width="80dp"
            android:layout_height="110dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/sala101"

            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_vertical_margin"

            android:background="@color/colorAccent"
            />

        <android.support.v7.widget.AppCompatImageButton

            android:id="@+id/sala103"

            android:layout_width="80dp"
            android:layout_height="110dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/sala102"

            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_vertical_margin"

            android:background="@color/colorAccent"
            />

    </RelativeLayout>

</ScrollView>